<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatActivity" >

    <LinearLayout
        android:id="@+id/messaging"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contactButtons"
        android:background="@drawable/list_item_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/lemon_green"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sms" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="MESSAGES"
                android:textColor="@color/white"
                android:textSize="@dimen/largeText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@color/super_light_grey"
                android:fadingEdge="none"
                android:fastScrollEnabled="true"
                android:focusable="true"
                android:padding="4dp"
                android:paddingBottom="0.5dp"
                android:smoothScrollbar="false"
                android:stackFromBottom="true"
                android:transcriptMode="normal"
                tools:listitem="@android:layout/simple_list_item_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingTop="0.5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:background="@color/super_light_grey"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/chat_input"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:cursorVisible="true"
                        android:hint="Write message text here.."
                        android:imeOptions="actionSend|flagNoExtractUi"
                        android:inputType="textShortMessage|textAutoCorrect|textMultiLine|textCapSentences"
                        android:paddingLeft="10dp"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/largeText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="left"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/chat_send_message"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/lemon_green"
                        android:drawableLeft="@drawable/ic_check"
                        android:text="SEND"
                        android:textColor="@color/white"
                        android:textSize="@dimen/smallText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>