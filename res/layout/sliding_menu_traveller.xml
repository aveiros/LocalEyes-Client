<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/red_button"
        android:textSize="@dimen/menuButtonText"
        android:text="LOGOUT"
        android:textColor="@color/white" />
    
		<LinearLayout
    		android:id="@+id/layoutMenuMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/super_light_grey"
                android:gravity="left"
                android:orientation="horizontal" >
                          

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:text="MODE:"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/menuEntryTitleText" />
                
                <TextView
                    android:id="@+id/textViewMenuMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:text="TRAVELLER"                    
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/menuEntryTitleText" />
                                
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/blue_button"
                android:gravity="center"
                android:orientation="horizontal" >                
					<Button
				        android:id="@+id/btnSwitchMode"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"				        
				        android:background="@drawable/blue_button"
				        android:textSize="@dimen/menuButtonText"
				        android:text="SWITCH MODE"
				        android:textColor="@color/white" />                
                
            </LinearLayout>
        </LinearLayout>    
    


    <LinearLayout
        android:id="@+id/layoutMenuProfile"
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutMenuMode"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/profileMenuPhotoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            
                     <ImageView
             android:id="@+id/profilePic"                    
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:src="@drawable/thumb_1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileMenuInfo"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            
           

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp" >
                
			<TextView
                   android:id="@+id/profileMenuName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:text="CARLA SOUSA"
                   android:textColor="@color/dark_grey"
                   android:textStyle="bold"
                   android:paddingBottom="1.5dp"
                   android:textSize="@dimen/largeText" />                   
                
          	 <TextView
                android:id="@+id/profileMenuFeedbackTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileMenuName"
                android:text="FEEDBACK: "
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/smallText" />
                
          	 <TextView
                android:id="@+id/profileMenuTextViewStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileMenuStarsRating"
                android:text="STATUS: "
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/smallText" />

          	 <TextView
          	     android:id="@+id/profileMenuTextViewStatus"
          	     android:layout_width="wrap_content"
          	     android:layout_height="wrap_content"
          	     android:layout_below="@+id/profileMenuStarsRating"
          	     android:layout_toRightOf="@+id/profileMenuTextViewStatusTitle"
          	     android:text="ON-LINE"
          	     android:textColor="@color/dark_grey"
          	     android:textSize="@dimen/smallText" />

          	 <LinearLayout
          	     android:id="@+id/profileMenuStarsRating"
          	     android:layout_width="wrap_content"
          	     android:layout_height="wrap_content"
          	     android:layout_alignTop="@+id/profileMenuFeedbackTitle"
          	     android:layout_toRightOf="@+id/profileMenuFeedbackTitle"
          	     android:gravity="center_horizontal"
          	     android:orientation="horizontal" >

          	     <ImageView
          	         android:id="@+id/star"
          	         android:layout_width="14dp"
          	         android:layout_height="14dp"
          	         android:src="@drawable/ic_feedback_stare" />

          	     <ImageView
          	         android:id="@+id/star"
          	         android:layout_width="14dp"
          	         android:layout_height="14dp"
          	         android:src="@drawable/ic_feedback_stare" />

          	     <ImageView
          	         android:id="@+id/star"
          	         android:layout_width="14dp"
          	         android:layout_height="14dp"
          	         android:src="@drawable/ic_feedback_stare" />

          	     <ImageView
          	         android:id="@+id/star"
          	         android:layout_width="14dp"
          	         android:layout_height="14dp"
          	         android:src="@drawable/ic_feedback_stare" />

          	     <ImageView
          	         android:id="@+id/star"
          	         android:layout_width="14dp"
          	         android:layout_height="14dp"
          	         android:src="@drawable/ic_feedback_stare" />

          	     <TextView
          	         android:id="@+id/profileLocalTextViewFeedback"
          	         android:layout_width="wrap_content"
          	         android:layout_height="wrap_content"
          	         android:text="(429)"
          	         android:textColor="@color/medium_grey"
          	         android:textSize="12sp" />
          	 </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenuSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMenuProfile"
        android:background="@drawable/list_item_bg"
        android:orientation="vertical"
        android:paddingTop="0.5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:background="@color/super_light_grey"
                android:gravity="left"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:src="@drawable/ic_search_dark" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:text="SEARCH HOSTS"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/menuEntryTitleText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:background="@color/super_light_grey"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenuHostsAround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMenuSearch"
        android:background="@drawable/list_item_bg"
        android:orientation="vertical"
        android:paddingTop="0.5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:background="@color/super_light_grey"
                android:gravity="left"
                android:orientation="horizontal" >
                
				<ImageView
                    android:id="@+id/imageView1"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:src="@drawable/ic_people_dark" />                

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="NEARBY HOSTS"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/menuEntryTitleText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:background="@color/super_light_grey"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="5dp" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenuServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMenuHostsAround"
        android:background="@drawable/list_item_bg"
        android:orientation="vertical"
        android:paddingTop="0.5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:background="@color/super_light_grey"
                android:gravity="left"
                android:orientation="horizontal" >
                
				<ImageView
                    android:id="@+id/imageView1"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:src="@drawable/ic_services_dark" />                

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="SERVICES"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/menuEntryTitleText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenuMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMenuServices"
        android:background="@drawable/list_item_bg"
        android:orientation="vertical"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@color/super_light_grey"
                    android:gravity="left"
                    android:orientation="horizontal" >
                    
					<ImageView
                    android:id="@+id/imageView1"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:src="@drawable/ic_mail_dark" />
                    
                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="MESSAGES"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/menuEntryTitleText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@color/dark_grey"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp" >

					<TextView
                        android:id="@+id/menuTextViewNumberOfNewMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/menuNotificationBoxText" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>