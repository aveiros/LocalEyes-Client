<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/layout_margin"
    android:layout_marginRight="@dimen/layout_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/thumb_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/layout_margin" >

                <TextView
                    android:id="@+id/profileLocalName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:paddingBottom="2dp"
                    android:text="PAULA SOARES"
                    android:textSize="@dimen/largeText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileLocalFeedbackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLocalName"
                    android:text="FEEDBACK: "
                    android:textColor="@color/super_dark_grey"
                    android:textSize="@dimen/smallText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileLocalTextViewStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLocalStarsRating"
                    android:text="STATUS: "
                    android:textColor="@color/super_dark_grey"
                    android:textSize="@dimen/smallText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileLocalTextViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLocalStarsRating"
                    android:layout_toRightOf="@+id/profileLocalTextViewStatusTitle"
                    android:text="ON-LINE"
                    android:textSize="@dimen/smallText" />

                <TextView
                    android:id="@+id/profileLocalTextViewLocationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLocalTextViewStatusTitle"
                    android:text="LOCATION: "
                    android:textColor="@color/super_dark_grey"
                    android:textSize="@dimen/smallText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileLocalTextViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLocalTextViewStatusTitle"
                    android:layout_toRightOf="@+id/profileLocalTextViewLocationTitle"
                    android:text="LISBON - ROSSIO"
                    android:textSize="@dimen/smallText" />

                <TextView
                    android:id="@+id/profileLocalTextViewLocationDistanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLocalTextViewLocationTitle"
                    android:text="DISTANCE FROM YOU: "
                    android:textColor="@color/super_dark_grey"
                    android:textSize="@dimen/smallText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileLocalTextViewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileLocalTextViewLocationTitle"
                    android:layout_toRightOf="@+id/profileLocalTextViewLocationDistanceTitle"
                    android:text="200m"
                    android:textSize="@dimen/smallText" />

                <LinearLayout
                    android:id="@+id/profileLocalStarsRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/profileLocalFeedbackTitle"
                    android:layout_toRightOf="@+id/profileLocalFeedbackTitle"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_feedback_stare" />

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_feedback_stare" />

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_feedback_stare" />

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_feedback_stare" />

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_feedback_stare" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(429)"
                        android:textColor="@color/medium_grey"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_separator_margin"
            android:layout_marginTop="@dimen/layout_separator_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layoutTabBook"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonBook"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/blue_button"
                    android:drawableLeft="@drawable/ic_book"
                    android:layout_height="wrap_content"
                    android:text="BOOK NOW"
                    android:textColor="#FFFfFF"
                    android:textSize="@dimen/menuNotificationBoxText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTabContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/super_light_grey"
                android:gravity="center_horizontal"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/layoutTabContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/super_light_grey"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonContact"
                    android:layout_width="fill_parent"
					android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/blue_button"
                    android:drawableLeft="@drawable/ic_sms"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="QUESTION"
                    android:textColor="#FFFfFF"
                    android:textSize="@dimen/menuNotificationBoxText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLocalLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
				android:background="@drawable/titles_bg"                
                android:layout_weight="3"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"                   
                    android:text="LOCATION"
                    android:textStyle="bold"
                    android:textColor="@color/fancy_blue"
                    android:textSize="@dimen/menuNotificationBoxText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"                
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AROUND"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/closebyPoiName"
                    android:text="*It&apos;s around 200M from you."
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/closebyPoiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:text="LISBON (OLD CITY CENTER)"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_map" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/interestsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/layout_separator_margin"        
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/small_title_icon"
                    android:layout_height="@dimen/small_title_icon"
                    android:src="@drawable/ic_sun" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:background="@drawable/titles_bg"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"                    
                    android:text="ACTIVITIES"
                    android:textStyle="bold"
                    android:textColor="@color/fancy_blue"
                    android:textSize="@dimen/menuNotificationBoxText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"                
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="10h-16h" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="I can show you the GARDENS around the Island. During the visit to the gardens I can take you also to the best tea houses"
                    android:textColor="@color/medium_grey"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/latesteFeedbackList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/layout_separator_margin"       
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/small_title_icon"
                    android:layout_height="@dimen/small_title_icon"
                    android:src="@drawable/ic_check" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
				android:background="@drawable/titles_bg"                
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"                    
                    android:text="LATEST FEEDBACK"
                    android:textStyle="bold"
                    android:textColor="@color/fancy_blue"
                    android:textSize="@dimen/menuNotificationBoxText" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/std_bg_grey"
            android:dividerHeight="2dp"
            android:gravity="center"
            tools:listitem="@layout/item_feedback_list" >

        </ListView>
    </LinearLayout>

    <!-- FEEDBACK LIST -->

</LinearLayout>