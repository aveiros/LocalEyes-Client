<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/super_dark_grey" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#C9C9C9"
                android:endColor="#E3E3E3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/fancy_blue" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>